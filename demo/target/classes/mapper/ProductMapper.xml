<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ProductMapper">

    <!-- 结果映射 -->
    <resultMap id="ProductResultMap" type="ProductEntity">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
        <result property="description" column="description"/>
    </resultMap>

    <!-- 查询所有商品 -->
    <select id="selectAll" resultMap="ProductResultMap">
        SELECT id, name, price, description
        FROM product
        ORDER BY id
    </select>

    <!-- 根据ID查询商品 -->
    <select id="selectById" parameterType="Long" resultMap="ProductResultMap">
        SELECT id, name, price, description
        FROM product
        WHERE id = #{id}
    </select>

    <!-- 根据名称查询商品 -->
    <select id="selectByName" parameterType="String" resultMap="ProductResultMap">
        SELECT id, name, price, description
        FROM product
        WHERE name = #{name}
        LIMIT 1
    </select>

    <!-- 插入商品 -->
    <insert id="insert" parameterType="ProductEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product (name, price, description)
        VALUES (#{name}, #{price}, #{description})
    </insert>

    <!-- 更新商品 -->
    <update id="update" parameterType="ProductEntity">
        UPDATE product
        SET name = #{name},
            price = #{price},
            description = #{description}
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除商品 -->
    <delete id="deleteById" parameterType="Long">
        DELETE FROM product
        WHERE id = #{id}
    </delete>

</mapper>